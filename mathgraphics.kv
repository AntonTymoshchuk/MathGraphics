                        InputButton:
                            id: input_left_bracket_button
                            text: '('
                        InputButton:
                            id: input_right_bracket_button
                            text: ')'
                    InputButton:
                        id: input_factorial_button
                        size_hint: (1, 0.25)
                        text: 'factorial'
            GridLayout:
                size_hint: (1, 0.43)
                cols: 3
                InputButton:
                    id: input_sin_button
                    text: 'sin'
                InputButton:
                    id: input_cos_button
                    text: 'cos'
                InputButton:
                    id: input_arcsin_button
                    text: 'arcsin'
                InputButton:
                    id: input_sinh_button
